<!DOCTYPE html>
<html>
  <head>
    <title>WebApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%if(user_signed_in?) %>
      <div class="d-flex justify-content-between bg-info p-2 text-dark bg-opacity-50">
        <div class="p-1 align-self-center">
          <%= link_to 'Idea Factory', ideas_path %>
        </div> 
        <div class="p-1 align-self-center">
          Hello <%= current_user.first_name%>!
        </div>
        <div class="p-1">
          <%= button_to "Log out", sessions_path, method: :delete, class:"btn btn-primary" %>
        </div>    
      </div>
    <% else %>
      <div class="d-flex justify-content-between bg-info p-3 text-dark bg-opacity-50">
        <div class="p-1 align-self-center">
          <%= link_to 'Idea Factory', ideas_path %>
        </div>       
        <div class="d-flex justify-content-end">
          <div class="p-1">
            <%= link_to 'Sign In Page', new_session_path%>
          </div>
          <div class="p-1">
            <%= link_to 'Sign Up Page', new_user_path%>
          </div>  
        </div>
      </div>
    <% end %>

    <ul class="nav justify-content-center bg-info p-1 text-dark bg-opacity-25">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item">
          <a class="nav-link" href="/ideas">Ideas</a>
      </li>
      <li class="nav-item">
          <a class="nav-link" href="/ideas/new">New Idea!</a>
      </li>
    </ul>

    <div class="d-flex justify-content-center bg-info p-1 text-dark bg-opacity-10 ">
      <% flash.each do |type, message| %>
        <div class="d-flex justify-content-end" >
          <%= type + "-------" + message %>
        </div>
        
      <% end %>  
    </div>

    <%= yield %>
  </body>
</html>
